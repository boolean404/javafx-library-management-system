<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1230.0"
	xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.mmit.controller.BookAddController">
	<children>
		<Pane layoutX="16.0" layoutY="136.0" prefHeight="494.0"
			prefWidth="1200.0" style="-fx-background-color: #dbffed;">
			<children>
				<TextField fx:id="txt_title" layoutX="475.0"
					layoutY="67.0" prefHeight="42.0" prefWidth="253.0"
					promptText="Title" />
				<Button layoutX="550.0" layoutY="416.0"
					mnemonicParsing="false" onAction="#btn_add_click" prefHeight="26.0"
					prefWidth="102.0" style="-fx-background-color: #1ccaff;" text="Add"
					textFill="WHITE">
					<cursor>
						<Cursor fx:constant="HAND" />
					</cursor>
				</Button>
				<DatePicker fx:id="txt_publish_date" layoutX="475.0"
					layoutY="151.0" prefHeight="42.0" prefWidth="253.0"
					promptText="Pick Date" />
				<ComboBox fx:id="cbo_author" layoutX="475.0"
					layoutY="237.0" prefHeight="42.0" prefWidth="253.0"
					promptText="Choose Author" />
				<ComboBox fx:id="cbo_category" layoutX="474.0"
					layoutY="322.0" prefHeight="42.0" prefWidth="253.0"
					promptText="Choose Category" />
				<Label layoutX="309.0" layoutY="77.0" text="Book Title"
					textFill="#514d4d">
					<font>
						<Font size="16.0" />
					</font>
				</Label>
				<Label layoutX="307.0" layoutY="161.0" text="Publish Date"
					textFill="#514d4d">
					<font>
						<Font size="16.0" />
					</font>
				</Label>
				<Label layoutX="309.0" layoutY="247.0" text="Author"
					textFill="#514d4d">
					<font>
						<Font size="16.0" />
					</font>
				</Label>
				<Label layoutX="307.0" layoutY="332.0" text="Category"
					textFill="#514d4d">
					<font>
						<Font size="16.0" />
					</font>
				</Label>
			</children>
		</Pane>
		<Button layoutX="1091.0" layoutY="668.0"
			mnemonicParsing="false" onAction="#btn_logout_click"
			prefHeight="26.0" prefWidth="102.0"
			style="-fx-background-color: #00676c;" text="Log Out"
			textFill="WHITE">
			<cursor>
				<Cursor fx:constant="HAND" />
			</cursor>
		</Button>
		<Button layoutX="38.0" layoutY="668.0" mnemonicParsing="false"
			onAction="#btn_back_click" prefHeight="26.0" prefWidth="102.0"
			style="-fx-background-color: #55557f;" text="Back" textFill="WHITE">
			<cursor>
				<Cursor fx:constant="HAND" />
			</cursor>
		</Button>
		<Pane layoutX="15.0" layoutY="25.0" prefHeight="83.0"
			prefWidth="1200.0" style="-fx-background-color: #aeffff;">
			<children>
				<Label layoutX="543.0" layoutY="24.0" text="Add Book"
					textFill="#514d4d">
					<font>
						<Font name="System Bold" size="24.0" />
					</font>
				</Label>
			</children>
		</Pane>
	</children>
</AnchorPane>
